<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Filtro</filter-name>
        <filter-class>br.com.checkstand.controller.Filtro</filter-class>
    </filter>
    <filter>
        <filter-name>filtro</filter-name>
        <filter-class>br.com.checkstand.controller.Filtro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filtro</filter-name>
        <url-pattern>/restrito/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UsuarioControllador</servlet-name>
        <servlet-class>br.com.checkstand.controller.UsuarioControllador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoControllador</servlet-name>
        <servlet-class>br.com.checkstand.controller.ProdutoControllador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AutenticacaoControllador</servlet-name>
        <servlet-class>br.com.checkstand.controller.AutenticacaoControllador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuarioControllador</servlet-name>
        <url-pattern>/UsuarioControllador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoControllador</servlet-name>
        <url-pattern>/ProdutoControllador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AutenticacaoControllador</servlet-name>
        <url-pattern>/AutenticacaoControllador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
